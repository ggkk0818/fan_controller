{
  "apps": {
      "name": "FanController",
      "script": "node index.js",
      "cwd": "./",
      "args": "",
      "interpreter": "",
      "interpreter_args": "",
      "watch": ["server"],
      "exec_mode": "fork",
      "instances": 1,
      "max_memory_restart": "128M",
      "error_file": "./logs/app-err.log",
      "out_file": "./logs/app-out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "min_uptime": "60s",
      "max_restarts": 30,
      "autorestart": true,
      "cron_restart": "",
      "restart_delay": 60,
      "env": {
         "NODE_ENV": "production"
      },
      "env_dev": {
          "NODE_ENV": "development"
      },
      "env_test": {
          "NODE_ENV": "test"
      }
  }
}